{
 "compilerOptions": {
  "strict": true,
  "outDir": "./dist/",
  "noImplicitAny": true,
  "module": "ESNext",
  "target": "es2017",
  "jsx": "react-jsx",
  "allowJs": true,
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "baseUrl": ".",
  "paths": {
   "@/*": ["./src/*"]
  }
 },
 "ts-node": {
  "compilerOptions": {
   "module": "CommonJS"
  }
 },
 "include": [
  "./config/jest/setupTests.tsx",
  "./src/**/*.ts",
  "./src/**/*.tsx"
 ],
 "exclude": ["./node_modules"]
}
